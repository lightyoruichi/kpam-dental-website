---
export interface Props {
  name: string;
  role: string;
  content: string;
  rating: number;
  image?: string;
}

const { name, role, content, rating, image = "https://images.pexels.com/photos/1239291/pexels-photo-1239291.jpeg?auto=compress&cs=tinysrgb&w=150&h=150&fit=crop" } = Astro.props;
---

<div class="testimonial-card">
  <div class="flex items-center mb-4">
    <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center mr-4">
      <img src={image} alt={name} class="w-10 h-10 rounded-full object-cover" />
    </div>
    <div>
      <h4 class="font-semibold text-base-content">{name}</h4>
      <p class="text-sm text-base-content/70">{role}</p>
    </div>
  </div>
  
  <div class="flex items-center mb-3">
    {Array.from({ length: 5 }).map((_, i) => (
      <svg 
        class={`w-5 h-5 ${i < rating ? 'text-warning' : 'text-base-300'}`} 
        fill="currentColor" 
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
    ))}
  </div>
  
  <blockquote class="text-base-content/80 italic">
    "{content}"
  </blockquote>
</div>
