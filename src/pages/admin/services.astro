---
import BaseLayout from '../../components/BaseLayout.astro';
import { services } from '../../config/services.ts';

const adminPassword = import.meta.env.ADMIN_PASSWORD || 'demo123';
const isAuthenticated = Astro.url.searchParams.get('auth') === adminPassword;
---

{isAuthenticated ? (
  <BaseLayout 
    title="Services Management"
    description="Manage your services"
    currentPage="admin"
  >
    <div class="min-h-screen bg-gray-50">
      <div class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
          <div class="flex items-center justify-between">
            <div>
              <a href={`/admin?auth=${adminPassword}`} class="text-sm text-gray-600 hover:text-gray-900 mb-2 inline-block">
                ‚Üê Back to Dashboard
              </a>
              <h1 class="text-2xl font-bold text-gray-900">Services Overview</h1>
              <p class="text-sm text-gray-600">View your current services configuration</p>
            </div>
          </div>
        </div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 gap-6">
          {services.map((service) => (
            <div class="bg-white rounded-lg shadow overflow-hidden">
              <div class="p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-center gap-3 mb-2">
                      <h3 class="text-lg font-semibold text-gray-900">{service.name}</h3>
                      {service.popular && (
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                          Popular
                        </span>
                      )}
                    </div>
                    <p class="text-sm text-gray-600 mb-3">{service.description}</p>
                    <div class="flex items-center gap-4 text-sm text-gray-500">
                      <span>üí∞ {service.price}</span>
                      <span>‚è±Ô∏è {service.duration}</span>
                      <span>üìÅ {service.category}</span>
                    </div>
                  </div>
                </div>
                
                {service.subServices && service.subServices.length > 0 && (
                  <div class="mt-4 pt-4 border-t border-gray-200">
                    <p class="text-sm font-medium text-gray-700 mb-2">Sub-services ({service.subServices.length}):</p>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                      {service.subServices.map((sub) => (
                        <div class="bg-gray-50 p-3 rounded">
                          <p class="text-sm font-medium text-gray-900">{sub.name}</p>
                          <p class="text-xs text-gray-600 mt-1">{sub.price} ‚Ä¢ {sub.duration}</p>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>

        <!-- Info Notice -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mt-8">
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <div>
              <h3 class="font-semibold text-blue-900 mb-1">View Only</h3>
              <p class="text-sm text-blue-800">
                To modify services, edit <code class="bg-blue-100 px-2 py-1 rounded text-xs">src/config/services.ts</code> and rebuild your site.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </BaseLayout>
) : (
  <BaseLayout title="Admin Login" description="Admin login" currentPage="admin">
    <div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-lg p-8 max-w-md w-full">
        <div class="text-center mb-6">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-900">Admin Login</h1>
        </div>
        <form method="GET" class="space-y-4">
          <input type="password" name="auth" placeholder="Enter password" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
          <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700">Sign In</button>
        </form>
        <p class="text-xs text-gray-500 mt-6 text-center">Demo password: <code class="bg-gray-100 px-2 py-1 rounded">demo123</code></p>
      </div>
    </div>
  </BaseLayout>
)}
---

