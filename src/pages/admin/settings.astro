---
import BaseLayout from '../../components/BaseLayout.astro';
import { siteConfig } from '../../config/site';

const adminPassword = import.meta.env.ADMIN_PASSWORD || 'demo123';
const isAuthenticated = Astro.url.searchParams.get('auth') === adminPassword;
---

{isAuthenticated ? (
  <BaseLayout 
    title="Site Settings"
    description="Configure site settings"
    currentPage="admin"
  >
    <div class="min-h-screen bg-gray-50">
      <div class="bg-white border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
          <div>
            <a href={`/admin?auth=${adminPassword}`} class="text-sm text-gray-600 hover:text-gray-900 mb-2 inline-block">
              ‚Üê Back to Dashboard
            </a>
            <h1 class="text-2xl font-bold text-gray-900">Site Settings</h1>
            <p class="text-sm text-gray-600">Configure your website settings and business information</p>
          </div>
        </div>
      </div>

      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="space-y-6">
          <!-- Business Information -->
          <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">Business Information</h2>
              <p class="text-sm text-gray-600 mt-1">Update your business details</p>
            </div>
            <div class="p-6 space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Business Name</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.name}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.email}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Phone</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.phone}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Address</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.address.street}, {siteConfig.business.address.city}, {siteConfig.business.address.state} {siteConfig.business.address.zip}</div>
              </div>
            </div>
          </div>

          <!-- SEO Settings -->
          <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">SEO Settings</h2>
              <p class="text-sm text-gray-600 mt-1">Optimize your website for search engines</p>
            </div>
            <div class="p-6 space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Site URL</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.seo.siteUrl}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Meta Description</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.seo.defaultDescription}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Keywords</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.seo.keywords}</div>
              </div>
            </div>
          </div>

          <!-- Social Media -->
          <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">Social Media</h2>
              <p class="text-sm text-gray-600 mt-1">Connect your social media accounts</p>
            </div>
            <div class="p-6 space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Instagram</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.social.instagram}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Facebook</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.social.facebook}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Twitter</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.social.twitter}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">LinkedIn</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.social.linkedin}</div>
              </div>
            </div>
          </div>

          <!-- WhatsApp -->
          <div class="bg-white rounded-lg shadow">
            <div class="p-6 border-b border-gray-200">
              <h2 class="text-lg font-semibold text-gray-900">WhatsApp Integration</h2>
              <p class="text-sm text-gray-600 mt-1">Configure WhatsApp contact settings</p>
            </div>
            <div class="p-6 space-y-4">
              <div class="flex items-center gap-3">
                <div class={`w-4 h-4 rounded border-2 flex items-center justify-center ${siteConfig.business.whatsapp.enabled ? 'bg-blue-600 border-blue-600' : 'border-gray-300'}`}>
                  {siteConfig.business.whatsapp.enabled && (
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  )}
                </div>
                <label class="text-sm font-medium text-gray-700">Enable WhatsApp Integration</label>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">WhatsApp Number</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.whatsapp.number}</div>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-2">Default Message</label>
                <div class="px-4 py-2 bg-gray-50 border border-gray-200 rounded-lg text-gray-900">{siteConfig.business.whatsapp.message}</div>
              </div>
            </div>
          </div>

          <!-- Info Notice -->
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-blue-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-blue-900 mb-1">Configuration Files</h3>
                <p class="text-sm text-blue-800">
                  These settings are currently read-only. To make changes, edit the configuration files directly:
                  <code class="bg-blue-100 px-2 py-1 rounded text-xs">src/config/site.ts</code> and rebuild your site.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </BaseLayout>
) : (
  <BaseLayout title="Admin Login" description="Admin login" currentPage="admin">
    <div class="min-h-screen bg-gray-50 flex items-center justify-center p-4">
      <div class="bg-white rounded-lg shadow-lg p-8 max-w-md w-full">
        <div class="text-center mb-6">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-900">Admin Login</h1>
        </div>
        <form method="GET" class="space-y-4">
          <input type="password" name="auth" placeholder="Enter password" class="w-full px-4 py-3 border border-gray-300 rounded-lg" required />
          <button type="submit" class="w-full bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700">Sign In</button>
        </form>
        <p class="text-xs text-gray-500 mt-6 text-center">Demo password: <code class="bg-gray-100 px-2 py-1 rounded">demo123</code></p>
      </div>
    </div>
  </BaseLayout>
)}
---

