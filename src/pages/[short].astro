---
import { getShortLink, trackShortLinkClick } from '../config/analytics';
import Analytics from '../components/Analytics.astro';

// For SSR mode, we handle the route dynamically
const { short } = Astro.params;
const link = getShortLink(short || '');

if (!link) {
  return Astro.redirect('/404');
}

// Get query parameters from the current URL
const url = new URL(Astro.request.url);
const searchParams = url.searchParams;
const queryString = searchParams.toString();

// Build the final destination URL with parameters
let finalDestination = link.destination;
if (queryString) {
  const separator = link.destination.includes('?') ? '&' : '?';
  finalDestination = `${link.destination}${separator}${queryString}`;
}
---

<html>
  <head>
    <meta charset="utf-8">
    <title>Redirecting...</title>
    <meta name="robots" content="noindex, nofollow">
    <meta http-equiv="refresh" content="0;url={finalDestination}">
    
    <!-- Analytics Scripts -->
    <Analytics client:load />
    
    <!-- Track Short Link Click - Universal Tracking -->
    <script is:inline>
      // Send to all enabled analytics platforms
      (function() {
        const eventData = {
          event_category: '{link.category}',
          event_label: '{link.label}',
          link_id: '{link.id}',
          destination: '{finalDestination}',
          short_url: '{link.short}',
          link_description: '{link.description}'
        };
        
        // Google Analytics 4
        if (window.gtag) {
          window.gtag('event', 'short_link_click', eventData);
        }
        
        // Google Tag Manager
        if (window.dataLayer) {
          window.dataLayer.push({
            event: 'short_link_click',
            ...eventData
          });
        }
        
        // Meta Pixel
        if (window.fbq) {
          window.fbq('track', 'short_link_click', eventData);
        }
        
        // LinkedIn Insight Tag
        if (window.lintrk) {
          window.lintrk('track', { conversion_name: 'short_link_click' });
        }
        
        // TikTok Pixel
        if (window.ttq) {
          window.ttq.track('short_link_click', eventData);
        }
        
        // Pinterest Tag
        if (window.pintrk) {
          window.pintrk('track', 'short_link_click', eventData);
        }
        
        // Reddit Pixel
        if (window.rdt) {
          window.rdt('track', 'short_link_click', eventData);
        }
      })();
    </script>
    
    <!-- Fallback redirect for browsers that don't support meta refresh -->
    <script>
      setTimeout(() => {
        window.location.href = '{finalDestination}';
      }, 100);
    </script>
  </head>
  <body>
    <div style="
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      text-align: center;
    ">
      <div>
        <h1>Redirecting...</h1>
        <p>You are being redirected to {link.label}</p>
        <div style="margin-top: 20px;">
          <a href={finalDestination} style="color: white; text-decoration: underline;">
            Click here if you are not redirected automatically
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
