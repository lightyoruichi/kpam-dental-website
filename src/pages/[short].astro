---
import { getShortLink } from '../config/analytics.ts';

export async function getStaticPaths() {
  // This would typically be dynamic in production
  const shortLinks = [
    { params: { short: 'wa' } },
    { params: { short: 'call' } },
    { params: { short: 'map' } },
    { params: { short: 'ig' } },
    { params: { short: 'tiktok' } },
    { params: { short: 'emergency' } },
    { params: { short: 'grab' } },
    { params: { short: 'waze' } }
  ];
  
  return shortLinks;
}

const { short } = Astro.params;
const link = getShortLink(short || '');

if (!link) {
  return Astro.redirect('/404');
}

// Get query parameters from the current URL
const url = new URL(Astro.request.url);
const searchParams = url.searchParams;
const queryString = searchParams.toString();

// Build the final destination URL with parameters
let finalDestination = link.destination;
if (queryString) {
  const separator = link.destination.includes('?') ? '&' : '?';
  finalDestination = `${link.destination}${separator}${queryString}`;
}
---

<html>
  <head>
    <meta charset="utf-8">
    <title>Redirecting...</title>
    <meta name="robots" content="noindex, nofollow">
    <meta http-equiv="refresh" content="0;url={finalDestination}">
    
    <!-- Google Analytics tracking -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-XXXXXXXXXX"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-XXXXXXXXXX');
      
      // Track the short link click
      gtag('event', 'short_link_click', {
        event_category: '{link.category}',
        event_label: '{link.label}',
        link_id: '{link.id}',
        destination: '{finalDestination}',
        short_url: '{link.short}'
      });
    </script>
    
    <!-- Fallback redirect for browsers that don't support meta refresh -->
    <script>
      setTimeout(() => {
        window.location.href = '{finalDestination}';
      }, 100);
    </script>
  </head>
  <body>
    <div style="
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      font-family: Arial, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      text-align: center;
    ">
      <div>
        <h1>Redirecting...</h1>
        <p>You are being redirected to {link.label}</p>
        <div style="margin-top: 20px;">
          <a href={finalDestination} style="color: white; text-decoration: underline;">
            Click here if you are not redirected automatically
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
