---
import BaseLayout from '../../components/BaseLayout.astro';
import { getServiceBySlug, services } from '../../config/services';

// For SSR mode, we handle the route dynamically
const { service: serviceSlug } = Astro.params;
const service = getServiceBySlug(serviceSlug!);

if (!service) {
  return Astro.redirect('/404');
}

const pageTitle = `${service.name} - Professional Service`;
const pageDescription = service.description;
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  currentPage="services"
>
  <!-- Service Hero -->
  <section class="relative py-24 bg-gradient-to-br from-slate-50 via-blue-50 to-cyan-50 overflow-hidden">
    <div class="absolute inset-0">
      <div class="absolute top-20 right-20 w-96 h-96 bg-gradient-to-br from-cyan-200/20 to-blue-200/20 rounded-full blur-3xl"></div>
    </div>
    
    <div class="container-custom relative z-10 max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
        <div class="space-y-8">
          <div class="inline-flex items-center space-x-2 bg-gradient-to-r from-cyan-100 to-blue-100 px-4 py-2 rounded-full">
            <div class="w-2 h-2 bg-gradient-to-r from-cyan-500 to-blue-500 rounded-full"></div>
            <span class="text-sm font-semibold text-slate-700">{service.category}</span>
          </div>
          
          <h1 class="text-5xl font-bold text-slate-800 leading-tight">
            {service.name}
          </h1>
          
          <p class="text-xl text-slate-600 leading-relaxed">
            {service.fullDescription}
          </p>
          
          <!-- Price & Duration -->
          <div class="flex items-center space-x-8">
            <div>
              <p class="text-sm text-slate-500 mb-1">Starting at</p>
              <p class="text-3xl font-bold bg-gradient-to-r from-cyan-600 to-blue-600 bg-clip-text text-transparent">
                {service.price}
              </p>
            </div>
            <div>
              <p class="text-sm text-slate-500 mb-1">Duration</p>
              <p class="text-2xl font-semibold text-slate-700">{service.duration}</p>
            </div>
          </div>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/wa?source=service&service={service.name}&text=I%20am%20interested%20in%20{service.name}" target="_blank" class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-cyan-600 to-blue-600 text-white font-semibold rounded-2xl shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300">
              <svg class="w-6 h-6 mr-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              Get Started
            </a>
            <a href="/call" class="inline-flex items-center justify-center px-8 py-4 bg-white text-slate-700 font-semibold rounded-2xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-300 border border-slate-200">
              <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              Call Now
            </a>
          </div>
        </div>
        
        <div class="relative">
          <div class="w-full h-[500px] rounded-3xl bg-gradient-to-br from-cyan-100 to-blue-100 shadow-2xl overflow-hidden">
            <img 
              src={service.image} 
              alt={service.name}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Features & Benefits -->
  <section class="py-24 bg-white">
    <div class="container-custom max-w-7xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <!-- Features -->
        <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl border border-white/20">
          <h2 class="text-3xl font-bold text-slate-800 mb-6">What's Included</h2>
          <div class="space-y-4">
            {service.features.map((feature) => (
              <div class="flex items-center space-x-3 p-4 bg-slate-50 rounded-xl">
                <svg class="w-5 h-5 text-emerald-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-slate-700 font-medium">{feature}</span>
              </div>
            ))}
          </div>
        </div>
        
        <!-- Benefits -->
        <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl border border-white/20">
          <h2 class="text-3xl font-bold text-slate-800 mb-6">Key Benefits</h2>
          <div class="space-y-4">
            {service.benefits.map((benefit) => (
              <div class="flex items-center space-x-3 p-4 bg-slate-50 rounded-xl">
                <svg class="w-5 h-5 text-cyan-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                <span class="text-slate-700 font-medium">{benefit}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
      
      <!-- Sub-Services -->
      {service.subServices && service.subServices.length > 0 && (
        <div class="mt-16">
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-slate-800 mb-4">Service Packages</h2>
            <p class="text-xl text-slate-600">Choose the package that best fits your needs</p>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {service.subServices.map((subService) => (
              <div class="bg-white/80 backdrop-blur-sm rounded-3xl p-8 shadow-xl border border-white/20 hover:shadow-2xl transition-all duration-300">
                <h3 class="text-2xl font-bold text-slate-800 mb-4">{subService.name}</h3>
                <p class="text-slate-600 mb-6">{subService.description}</p>
                
                <div class="space-y-4 mb-6">
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-slate-500">Price</span>
                    <span class="text-xl font-bold text-cyan-600">{subService.price}</span>
                  </div>
                  <div class="flex items-center justify-between">
                    <span class="text-sm text-slate-500">Duration</span>
                    <span class="text-lg font-semibold text-slate-700">{subService.duration}</span>
                  </div>
                </div>
                
                <div class="space-y-3 mb-6">
                  {subService.features.map((feature) => (
                    <div class="flex items-center space-x-2">
                      <svg class="w-4 h-4 text-emerald-500" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                      </svg>
                      <span class="text-sm text-slate-600">{feature}</span>
                    </div>
                  ))}
                </div>
                
                <a href="/wa?source=subservice&service={service.name}&subservice={subService.name}&text=I%20want%20to%20learn%20more%20about%20{subService.name}" target="_blank" class="block w-full text-center px-6 py-3 bg-gradient-to-r from-cyan-600 to-blue-600 text-white font-semibold rounded-xl hover:from-cyan-700 hover:to-blue-700 transition-all duration-300">
                  Learn More
                </a>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>
</BaseLayout>

