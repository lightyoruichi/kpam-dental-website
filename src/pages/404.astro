---
import BaseLayout from '../components/BaseLayout.astro';
import { siteConfig } from '../config/site';

const pageTitle = `404 - Page Not Found | ${siteConfig.business.name}`;
const pageDescription = "The page you're looking for doesn't exist. Return to our homepage.";
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
>
  <main class="min-h-[60vh] flex items-center justify-center py-16">
    <div class="text-center max-w-2xl mx-auto px-4">
      <!-- Error Code -->
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-primary mb-4">404</h1>
        <div class="inline-flex items-center space-x-2 bg-primary/10 px-4 py-2 rounded-full mb-6">
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          <span class="text-sm font-semibold text-primary">Page Not Found</span>
        </div>
      </div>

      <!-- Message -->
      <h2 class="text-3xl md:text-4xl font-bold text-base-content mb-4">
        Oops! Page Not Found
      </h2>
      <p class="text-lg text-base-content/70 mb-8 leading-relaxed">
        The page you're looking for doesn't exist or has been moved. 
        Don't worry, let's get you back on track.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a 
          href="/" 
          class="inline-flex items-center justify-center bg-primary text-primary-content px-8 py-4 rounded-lg font-semibold hover:bg-primary-focus transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
          </svg>
          Return Home
        </a>
        <a 
          href="/services" 
          class="inline-flex items-center justify-center bg-base-200 text-base-content px-8 py-4 rounded-lg font-semibold hover:bg-base-300 transition-colors border border-base-300"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
          </svg>
          View Services
        </a>
      </div>

      <!-- Quick Links -->
      <div class="bg-base-200 rounded-2xl p-8">
        <h3 class="text-lg font-semibold text-base-content mb-6">Quick Links</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
          <a href="/" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-base-300 transition-colors group">
            <svg class="w-5 h-5 text-primary group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
            <span class="text-base-content group-hover:text-primary transition-colors">Home</span>
          </a>
          <a href="/services" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-base-300 transition-colors group">
            <svg class="w-5 h-5 text-primary group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="text-base-content group-hover:text-primary transition-colors">Services</span>
          </a>
          <a href="/locations" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-base-300 transition-colors group">
            <svg class="w-5 h-5 text-primary group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span class="text-base-content group-hover:text-primary transition-colors">Locations</span>
          </a>
          <a href="/contact" class="flex items-center space-x-3 p-3 rounded-lg hover:bg-base-300 transition-colors group">
            <svg class="w-5 h-5 text-primary group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <span class="text-base-content group-hover:text-primary transition-colors">Contact</span>
          </a>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

