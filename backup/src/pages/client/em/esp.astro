---
import BaseLayout from '../../../components/BaseLayout.astro';
import ESPScanner from '../../../components/ESPScanner.svelte';

export const prerender = true;
---

<BaseLayout title="ESP Scanner - Internal Tool" description="Internal ESP detection tool">
  <!-- Minimal Header -->
  <section class="py-8">
    <div class="container mx-auto px-4">
      <h1 class="text-2xl font-bold text-center mb-4">
        ESP Scanner
      </h1>
      <p class="text-sm text-zinc-400 text-center mb-8">
        Internal tool for detecting email service providers
      </p>
    </div>
  </section>

  <!-- ESP Scanner Tool -->
  <section class="pb-16">
    <div class="container mx-auto px-4 max-w-2xl">
      <ESPScanner client:load />
    </div>
  </section>
</BaseLayout>