				}, 100);
				
				// Auto remove after 4 seconds
				setTimeout(() => {
					toast.classList.add('translate-x-full');
					setTimeout(() => {
						document.body.removeChild(toast);
					}, 300);
				}, 4000);
			}
			
		} catch (error) {
			console.error('Error in tools page JavaScript:', error);
