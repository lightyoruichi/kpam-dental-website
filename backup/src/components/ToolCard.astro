---
export interface Tool {
  id: string;
  title: string;
  description: string;
  category: string;
  difficulty: string;
  estimatedTime: string;
  tags: string[];
  relatedTools?: string[];
}

export interface Props {
  tool: Tool;
}

const { tool } = Astro.props;
---

<article class="tool-card group bg-zinc-900/50 border border-zinc-800 hover:border-zinc-700 rounded-xl transition-all duration-300 hover:bg-zinc-900/80 cursor-pointer" data-tool-id={tool.id}>
  <div class="p-6">
    <div class="mb-4">
      <div class="flex items-center gap-2 text-sm text-zinc-400 mb-3">
        <span class="px-2 py-1 bg-zinc-800 rounded-md text-xs font-medium">{tool.category}</span>
        <span class="text-zinc-500">•</span>
        <span>{tool.estimatedTime}</span>
        <span class="text-zinc-500">•</span>
        <span class="capitalize">{tool.difficulty}</span>
      </div>
      <h3 class="text-lg font-semibold text-white mb-3 group-hover:text-red-400 transition-colors line-clamp-2">{tool.title}</h3>
      <p class="text-zinc-300 leading-relaxed mb-4 line-clamp-2">{tool.description}</p>

      {/* Tags */}
      {tool.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-4">
          {tool.tags.slice(0, 2).map((tag) => (
            <span class="text-xs text-zinc-400 px-2 py-1 bg-zinc-800/50 rounded border border-zinc-700/50">
              {tag}
            </span>
          ))}
          {tool.tags.length > 2 && (
            <span class="text-xs text-zinc-500">+{tool.tags.length - 2} more</span>
          )}
        </div>
      )}
    </div>

    {/* Action Section */}
    <div class="pt-4 border-t border-zinc-800">
      <a 
        href={`/tools/${tool.id}`}
        class="inline-flex items-center gap-2 text-sm font-medium text-white hover:text-red-400 transition-colors"
      >
        View Tool
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</article>
